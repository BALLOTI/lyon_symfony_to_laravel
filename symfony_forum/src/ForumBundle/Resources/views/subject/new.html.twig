{% extends '@Forum/base.html.twig' %}

{% block body %}
    <div class="row topMarge">
        <div class="col s12">
            <div class="card col s6 offset-s3 blue darken-2">
                <div class="card-content white-text">
                    <span class="card-title">Nouveau sujet</span>
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="card-action center-align">
                        <button class="btn waves-effect waves-light" type="submit" name="action">Envoyer
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
