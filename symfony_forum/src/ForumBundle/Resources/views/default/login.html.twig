{% extends('@Forum/base.html.twig') %}

{% block body %}
    <div class="row topMarge">
        <div class="card-panel col s6 offset-s3 blue darken-2">
            <div class="row">
                {% if error %}
                    <div class="col s10 offset-s1 red lighten-2 white-text center-align">
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    </div>
                {% endif %}
            </div>
            {{ form_start(form) }}
            <div class="row">
                <div class="col s10 offset-s1">
                    {{ form_label(form.username) }}
                    {{ form_errors(form.username) }}
                    {{ form_widget(form.username, {"value": lastUsername } ) }}
                </div>
            </div>
            <div class="row">
                <div class="col s10 offset-s1">
                    {{ form_label(form.password) }}
                    {{ form_errors(form.password) }}
                    {{ form_widget(form.password) }}
                </div>
            </div>
            <div class="row center-align">
                <div class="col s10 offset-s1">
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}