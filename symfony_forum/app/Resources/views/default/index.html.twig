{% extends 'base.html.twig' %}

{% block body %}
    <ul class="collapsible" data-collapsible="accordion">
        {% for subject in data %}
            <li>
                <div class="collapsible-header {% if currentSubject is not null %}active{% endif %}">
                    {% set total = subject.comments | length %}
                    <span class="badge">{{ total }} comment{{ total > 1 ? 's' : '' }}</span>
                    <span class="subjectAuthor">
                        {{ subject.title }}
                    </span>
                    par {{ subject.user.username | capitalize }}
                </div>
                <div class="collapsible-body blue lighten-5">
                    <div class="row">
                        <div class="col s12 subjectContent">
                            {{ subject.content }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="center-align">
                            <a class="btn-floating btn-large waves-effect waves-light red lighten-2"
                               href="{{ path('comment_new', {"subject": subject.id}) }}">
                                <i class="material-icons">add</i>
                            </a>
                        </div>
                    </div>
                    {% if (subject.comments | length) > 0 %}
                        {% for comment in subject.comments %}
                            <div class="row">
                                <div class="col s12">
                                    <div class="card blue lighten-5">
                                        <div class="card-content">
                                            <span class="card-title">{{ comment.user.username }}</span>
                                            <p>{{ comment.content }}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </li>
        {% endfor %}
    </ul>
    <div class="center-align">
        <a class="btn-floating btn-large waves-effect waves-light red lighten-2" href="{{ path('subject_new') }}">
            <i class="material-icons">add</i>
        </a>
    </div>
{% endblock %}