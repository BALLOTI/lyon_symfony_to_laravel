{% extends 'base.html.twig' %}

{% block body %}

    <ul class="collapsible" data-collapsible="accordion">
        {% for subject in data %}
            <li>
                <div class="collapsible-header">
                    {% set total = subject.comments | length %}
                    <span class="badge">{{ total }} comment{{ total > 1 ? 's' : '' }}</span>
                    <span>{{ subject.user.username }}</span>
                    <a href="{{ path('subject_show', {'subject': subject.id }) }}">{{ subject.title }}</a>
                </div>
                <div class="collapsible-body blue lighten-5">
                    {% if (subject.comments | length) > 0 %}
                        {% for comment in subject.comments %}
                            <div class="row">
                                <div class="col s12">
                                    <div class="card blue lighten-5">
                                        <div class="card-content">
                                            <span class="card-title">{{ comment.user.username }}</span>
                                            <p>{{ comment.content }}</p>
                                        </div>
                                        <div class="card-action">
                                            <a href="#">This is a link</a>
                                            <a href="#">This is a link</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </li>
        {% endfor %}
    </ul>
    <a href="{{ path('subject_new') }}">New subject</a>

{% endblock %}