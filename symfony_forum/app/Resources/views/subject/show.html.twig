{% extends 'base.html.twig' %}

{% block body %}
    <h1>Subject</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ subject.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ subject.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ subject.content }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('subject_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('subject_edit', { 'id': subject.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
